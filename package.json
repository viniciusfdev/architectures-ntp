{
  "name": "typescript-starter",
  "maintainers": [
    "Vinícius França"
  ],
  "version": "1.0.0",
  "description": "A basic typescript app starter for newbies in 2019.",
  "main": "index.js",
  "scripts": {
    "docker-start:dev": "docker run --name archs-ntp -d -p 8000:3000 --env-file .env.dev archs-ntp",
    "docker-start:prod": "docker run --name archs-ntp -d -p 8000:3000 --env-file .env.prod archs-ntp",
    "docker-build": "docker build -t archs-ntp .",
    "build": "rimraf ./build && tsc",
    "start:dev": "env $(cat .env.dev) nodemon",
    "start": "npm run build && node -r dotenv/config build/index.js dotenv_config_path=.env.prod",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest && npm run prettier-format && npm run lint",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "eslint-plugin-jest": "^25.3.4",
    "jest": "^26.5.3",
    "npm": "^8.3.0",
    "ts-jest": "^26.4.1"
  }
}
